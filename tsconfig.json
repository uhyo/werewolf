{
    "compilerOptions":{
        "lib": ["dom", "es5", "es2015.core", "es2015.promise"],
        "declaration": true,
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strictNullChecks": true,
        "module":"commonjs",
        "target":"es5",
        "outDir":"dist/",
        "declarationDir":"dist-typings/"
    },
    "include":[
        "index.ts", "lib/**/*.ts", "core/**/*.ts", "spec/**/*.ts"
    ],
    "exclude":[
        "node_modules/",
        "dist-typings/"
    ]
}



